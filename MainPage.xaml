<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arguello_ExamenP2.MainPage"
             Title="Convertidor de Unidades">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20">

            <Label
                Text="Conversor de Unidades"
                FontSize="24"
                HorizontalOptions="Center" />

            <Picker
                x:Name="FromUnitPicker"
                Title="Unidad de Origen"
                HorizontalOptions="Fill" />

            <Picker
                x:Name="ToUnitPicker"
                Title="Unidad de Destino"
                HorizontalOptions="Fill" />

            <Entry
                x:Name="InputEntry"
                Placeholder="Cantidad"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />

            <Button
                Text="Convertir"
                Clicked="OnConvertClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Limpiar"
                Clicked="OnClearClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="ResultLabel"
                FontSize="18"
                TextColor="Black"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
